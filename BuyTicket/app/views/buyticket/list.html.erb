                        </div>
                        <div class="ifM_back">
                            <a href="http://{'previous':1}">Â« Back</a>
                        </div>
                    </div>
                </div>
                <div id="middle_part">
                    <div id="openbox_ads">
                        <img src="../images/New Banner.jpg" width="612px" height="87px" /><h2>Latest Release Movies</h2>
                        <div id="main">
                            <% if flash[:notice] -%>
                            <div id="notice">
                                <%= flash[:notice] %>
                            </div>
                            <% end -%>
                            <table border="0" width="100%" height="90%" align="center">
                                <hr/>
                                <tr>
                                    <% for product in @products %>
                                    <td width="10%" valign="top">
                                        <table border="0">
                                            <tr>
                                                <td>
                                                    <img src="<%= product.image_url%>" width="114" height="140" />
                                                    <br>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td width="50%">
                                                    Name : <%= h(product.name) %>
                                                    <br/>
                                                    Description : <%= h(product.description) %>
                                                    <br/>
                                                    Price : <%= number_to_currency(product.price) %>
                                                    <br/>
                                                    Starring : <%= h(product.starring) %>
                                                    <br/>
                                                    Singer : <%= h(product.singer) %>
                                                    <br/>
                                                    Director : <%= h(product.director) %>
                                                    <br/>
                                                    Producer : <%= h(product.Producer) %>
                                                    <br/>
                                                    Music : <%= h(product.Music) %>
                                                    <br/>
                                                    Quantity: <input type="text" name="quantity" id="quantity" value="" size="2" onkeyup="verify(this.id);">
                                                    <br>
                                                    <% form_remote_tag :url =>{:action => :add_to_cart, :id => product} do %>
                                                    <%= submit_tag "Add to Cart" %>
                                                    <%end %>
                                                </td>
                                            </tr>
                                        </table>
